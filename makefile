#************************************************************
#
#  makefile for GNU C++
#
#************************************************************

CC = g++


#************************************************************
#
# c++ source files
#1637
#************************************************************

CCFILES  = main.cpp \
           TM1637.cpp
 


#************************************************************
#
# C++ flags
#
# -c  = compile only
# -O2 = optimize level 2
# -s  = remove symboltables
#
#************************************************************

CCFLAGS  = -O2

#************************************************************
#
# Rule for making .o-file from .cpp-file
#
# $@ = Name of the target (.out)
# $< = Name of dependency (.cpp)
#
#************************************************************

.cpp.o:
	$(CC) -c $(CCFLAGS) -o$@ $<

#************************************************************
#
# List of object-files
#
#************************************************************

CCOBJECTS  = $(CCFILES:.cpp=.o)

#************************************************************
#
# Name of target
#
#************************************************************

TARGET  = 7segment

#************************************************************
#
# Rule for default-target
#
#************************************************************

default: $(TARGET)

#************************************************************
#
# Rule for clean-up
#
#************************************************************

clean:
	rm $(CCOBJECTS)

#************************************************************
#
# Rule for creating target from objects
#
#************************************************************

$(TARGET): $(CCOBJECTS) makefile
	$(CC) -s -o $(TARGET) $(CCFLAGS) $(CCOBJECTS) -lwiringPi -lxdo


